@model Shirt

<h3 class="text-white">Update a shirt</h3>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" hidden="hidden"/>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Brand" class="col-form-label"></label>
        </div>
        <div class="div-6">
            <input type="text" asp-for="Brand" class="form-control"/>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Color" class="col-form-label"></label>
        </div>
        <div class="div-6">
            <input type="text" asp-for="Color" class="form-control"/>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Gender" class="col-form-label"></label>
        </div>
        <div class="div-6">
            <input type="text" asp-for="Gender" class="form-control"/>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Size" class="col-form-label"></label>
        </div>
        <div class="div-6">
            <input type="number" asp-for="Size" class="form-control"/>
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="div-6">
            <input type="number" asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}